{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Format Verilog",
        "type": "shell",
        "command": "verilog-format",
        "args": [
          "-f",
          "${file}",  
          "-p"       
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared"
        },
        "problemMatcher": []
      }
    ]
  }